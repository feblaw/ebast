}
@section breadcrumb{
    <li>
        <span>Assignment Log </span>
    </li>
}
<h1 class="page-title">Assignment <small>Log</small></h1>
@if (TempData["Messages"] != null)
{
    <div class="alert alert-warning  alert-dismissable">
        <i class="fa fa-check"></i>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <b>Messages : </b> @TempData["Messages"]
    </div>
}
<div class="portlet light portlet-fit portlet-datatable bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase"></span>
        </div>
        <div class="pull-right" id="toolbox">
            &nbsp;&nbsp;&nbsp;
            @if (User.IsInRole("Administrator"))
            {
                <span id="IsAdmin"></span>
            }
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <table id="table" class="table table-striped table-bordered table-hover no-border-bottom">
            <thead>
                <tr>
                    <th>ASP</th>
                    <th>Asg Id</th>
                    <th>Bast Req No</th>
                    <th>Bast No</th>
                    <th>Bast Req By</th>
                    <th>Approver 1</th>
                    <th>Approval Status</th>
                    <th>Approval Date</th>
                    <th>Approver 2</th>
                    <th>Approval Status</th>
                    <th>Approval Date</th>
                    <th>Approver 3</th>
                    <th>Approval Status</th>
                    <th>Approval Date</th>
                    <th>Approver 4</th>
                    <th>Approval Status</th>
                    <th>Approval Date</th>
                    @*<th>Project Admin</th>
                    <th>Approval Status</th>
                    <th>Approval Date</th>
                    <th>IM/CPM</th>
                    <th>Approval Status SL</th>
                    <th>Approval Date</th>
                    <th>TPM</th>
                    <th>Approval Status</th>
                    <th>Approval Date</th>*@
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
