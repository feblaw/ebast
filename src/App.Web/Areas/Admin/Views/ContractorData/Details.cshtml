@using App.Web.Models.ViewModels.Core.Business
@model ContractorModelForm
@{
    ViewData["Title"] = "Contractor Information | " + Model.ContrctorName;
}

@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Contractor Data</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Edit Contractor Data</span>
    </li>
}

<h1 class="page-title">Contractor Data Form <small></small></h1>    
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">City Details</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <form role="form" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Assigned SRF Number</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.SrfNumber
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Signum</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.AhID
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Contractor Name</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.ContrctorName
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Pricelist Type</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.PricelistType
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Service Work Package</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @ViewBag.ServiceCategory
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Position / SSOW</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @ViewBag.ServicePack
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>SRF Begin</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.SrfBegin.ToString("dd MMMM yyyy")
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> SRF End</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.SrfEnd.ToString("dd MMMM yyyy")
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Homebase</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @ViewBag.HomeBase
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Line Manager</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @ViewBag.LineManager
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Project Manager</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @ViewBag.ProjectManager
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Phone (Mobile)</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.MobilePhoneNumber
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Phone (Home)</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.HomePhoneNumber
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> ID Number</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.IdNumber
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Email</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Email
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Nationality</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Nationality
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Place of Birth</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.PlaceOfBirth
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Date of Birth</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.DateOfBirth.ToString("yyyy-MM-dd")
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Address</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Address
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Gender</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Gender
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Marital</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Martial
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Username</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Username
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Password</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            *******
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Note/About </strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                          @Model.Notes
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong> Employee Status</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i>&nbsp; Back</a>
                        @if (User.IsInRole("Administrator") || User.IsInRole("HR Agency"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.SrfId" class="btn btn-primary"><i class="fa fa-edit"></i>&nbsp; Edit</a>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-contractor-data");

            var success = @((TempData["Success"] != null).ToString().ToLower());

            if (success == true) {
                toastr.options = {
                    "closeButton": true,
                    "positionClass": "toast-top-right"
                }
                toastr.success("Contractor  data has been updated");
            }
        });
    </script>
}