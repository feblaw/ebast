    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: "/Admin/Api/Emails/GetCurrentNotif", success: function (result) {
                    var json = eval(result);
                    var count = parseInt(json.count);
                    var list = json.list;
                    if (count > 0) {
                        $('#badge-unread-notif').text(count);
                        $('#badge-all-notif').text(count);
                        for (i = 0; i < list.length; i++) {
                            var divContent = $("#notif-template").html();
                            divContent = divContent.replace(/{{url}}/ig, '/Admin/Email/Details/' + list[i].id);
                            divContent = divContent.replace(/{{content}}/ig, list[i].subject);
                            $("#notification-list").append(divContent);
                        }
                    } else {
                        $('#badge-unread-notif').text(0);
                        $('#badge-all-notif').text(0);
                        var divContent = $("#notif-template").html();
                        divContent = divContent.replace(/{{url}}/ig, "#");
                        divContent = divContent.replace(/{{content}}/ig, "No Notification");
                        $("#notification-list").append(divContent);
                    }
                }
            });
        });
    </script>
    <script type="text/template" id="notif-template" ">
        <li>
            <a href="{{url}}">
                <span class="time"><i class="fa fa-envelope"></i></span>
                <span class="details">
                    @*<span class="label label-sm label-icon label-success">
                            <i class="fa fa-plus"></i>
                        </span>*@
                    {{content}}
                </span>
            </a>
        </li>
    </script>
