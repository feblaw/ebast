@{
    ViewBag.Title = "Holidays Page | Import";
}
@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Holidays List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Import</span>
    </li>
}

<h1 class="page-title">Holidays <small>Import</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">Holidays Import Form</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <div class="row">

            <div class="col-lg-12">
                <form role="form" asp-action="Import" method="post" id="form" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-md-6 control-label">
                            <input type="file" style="margin-left:10px;" class="control-label" name="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required />
                        </div>
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-primary" value="Upload" />
                        </div>
                    </div>
                </form>
                <hr />
            </div>

            <div class="col-lg-12">
                <div class="col-lg-4">
                    <div class="table-responsive">
                        <p style="margin-left:10px;"><strong>Format Import ( Example ) :  </strong></p>
                        <p style="margin-left:10px;"><strong>Week Day & Week End = 1, Lebaran/Christmas/Granted Holiday = 2</strong></p>
                        <table class="table table-bordered">
                            <tr>
                                <td></td>
                                <td>A</td>
                                <td>B</td>
                                <td>C</td>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>Date Day</td>
                                <td>Day Type</td>
                                <td>Description</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>2017-08-17</td>
                                <td>1</td>
                                <td>Independent Days</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>2017-05-01</td>
                                <td>2</td>
                                <td>May Days</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>2017-01-01</td>
                                <td>1</td>
                                <td>New Years Holidays Days</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>2017-12-25</td>
                                <td>2</td>
                                <td>Christmas</td>
                            </tr>
                            <tr>
                                <td colspan="2" align="left"><strong>Worksheet 1</strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/pages/scripts/role/form-validation.js"></script>
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-holidays");
            FormValidation.init("#form");
        });
    </script>
}