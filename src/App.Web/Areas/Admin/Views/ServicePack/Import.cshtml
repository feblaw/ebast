@{
    ViewBag.Title = "SSOW Page | Import";
}
@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Service Pack List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Import</span>
    </li>
}

<h1 class="page-title">SSOW <small>Import</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">SSOW Management Import Form</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <div class="row">

            <div class="col-lg-12">
                <form role="form" asp-action="Import" method="post" id="form" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-md-6 control-label">
                            <input type="file" style="margin-left:10px;" class="control-label" name="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required />
                        </div>
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-primary" value="Upload" />
                        </div>
                    </div>
                </form>
                <hr />
            </div>

            <div class="col-lg-12">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <p style="margin-left:10px;"><strong>Package Type ( A, B , FSO )</strong></p>
                        <p style="margin-left:10px;"><strong>Format Import ( Example ) :</strong></p>
                        <table class="table table-bordered">
                            <tr>
                                <td></td>
                                <td>A</td>
                                <td>B</td>
                                <td>C</td>
                                <td>D</td>
                                <td>E</td>
                                <td>F</td>
                                <td>G</td>
                                <td>H</td>
                                <td>I</td>
                                <td>J</td>
                                <td>K</td>
                            </tr>
                           <tr>
                               <td>1</td>
                               <td>Package Type</td>
                               <td>Service Work Package</td>
                               <td>SSOW Name</td>
                               <td>Service Code</td>
                               <td>Monthly Rate</td>
                               <td>Hourly Rate</td>
                               <td>OT Package Lump Sum (20)</td>
                               <td>OT Package Lump Sum (30)</td>
                               <td>OT Package Lump Sum (40) </td>
                               <td>Laptop Allowance</td>
                               <td>USIM Broadband</td>
                           </tr>
                            <tr>
                                <td>2</td>
                                <td>A</td>
                                <td>ADMINISTRATION SERVICES</td>
                                <td>Basic Administration Services 1</td>
                                <td>ADM-B01</td>
                                <td>100</td>
                                <td>12</td>
                                <td>43</td>
                                <td>32</td>
                                <td>43</td>
                                <td>500</td>
                                <td>500</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>B</td>
                                <td>ENGINEERING SERVICES</td>
                                <td>Basic Administration Services 2</td>
                                <td>ENG-B01</td>
                                <td>400</td>
                                <td>400</td>
                                <td>32</td>
                                <td>45</td>
                                <td>56</td>
                                <td>45</td>
                                <td>45</td>
                            </tr>
                            <tr>
                                <td colspan="11" align="left"><strong>Worksheet 1</strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/pages/scripts/role/form-validation.js"></script>
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-service-pack");
            FormValidation.init("#form");
        });
    </script>
}