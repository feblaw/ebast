                detailUrl: "@Url.Action("Details")/",
                editUrl: "@Url.Action("Edit")/",
                deleteUrl: "/admin/api/servicepacks/",
                deleteAlertSuccess: "SSOW has been removed",
                columnDefs: [
                          {
                              "targets": 1,
                              "data": "package",
                              name:"Type"
                          },
                          {
                              "targets": 2,
                              "data": "servicePackCategory.name",
