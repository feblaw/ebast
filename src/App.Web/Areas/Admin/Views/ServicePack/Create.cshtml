@using App.Web.Models.ViewModels.Core.Business
@model ServicePackModelForm
@{
    ViewBag.Title = "SSOW Page | Create";
}

@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">SSOW List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Create</span>
    </li>
}

<h1 class="page-title">SSOW<small> Create</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">SSOW Form</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <form role="form" asp-action="Create" method="post" id="form" class="form-horizontal">
            <div class="form-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                </div>
                @Html.ValidationSummary(true, "Failed to submit", new { @class = "alert alert-danger" })
                <div class="form-group">
                    <label asp-for="Type" class="control-label col-md-3">
                        Type
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="Type" asp-items="@(new SelectList(@ViewBag.ListPackageType, "Value","Text"))" required>
                            <option disabled selected>-- Select Package Types --</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ServicePackCategoryId" class="control-label col-md-3">
                        Service Work Package
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="ServicePackCategoryId" asp-items="@(new SelectList(@ViewBag.Category, "Id","Name"))" required></select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label col-md-3">
                        SSOW Name
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" asp-for="Name" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label col-md-3">
                        Service Code
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" asp-for="Code" required>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Rate" class="control-label col-md-3">
                        Monthly Rate
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="RateFormat" value="" required>
                        <input type="hidden" value="0" asp-for="Rate" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Hourly" class="control-label col-md-3">
                        Hourly Rate
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="HourlyFormat" value="">
                        <input type="hidden" value="0" asp-for="Hourly" />
                        <span asp-validation-for="Hourly" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Otp20" class="control-label col-md-3">
                        OT Package Lump Sum (20)
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="Otp20Format" value="">
                        <input type="hidden" value="0" asp-for="Otp20" />
                        <span asp-validation-for="Otp20" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Otp30" class="control-label col-md-3">
                        OT Package Lump Sum (30)
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="Otp30Format" value="">
                        <input type="hidden" value="0" asp-for="Otp30" />
                        <span asp-validation-for="Otp30" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Otp40" class="control-label col-md-3">
                        OT Package Lump Sum (40)
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="Otp40Format" value="">
                        <input type="hidden" value="0" asp-for="Otp40" />
                        <span asp-validation-for="Otp40" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Laptop" class="control-label col-md-3">
                        Laptop Allowance
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="LaptopFormat" value="">
                        <input type="hidden" value="0" asp-for="Laptop" />
                        <span asp-validation-for="Laptop" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Usin" class="control-label col-md-3">
                        USIM Broadband
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control numeric" id="UsinFormat" value="">
                        <input type="hidden" value="0" asp-for="Usin" />
                        <span asp-validation-for="Usin" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label col-md-3">
                        SSOW Status
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="Status" required>
                            <option value="Active">Active</option>
                            <option value="Close">Close</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceCode" class="control-label col-md-3">
                        ServiceCode
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" asp-for="ServiceCode" required>
                        <span asp-validation-for="ServiceCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group last">
                    <div class="col-md-3 col-md-offset-3">
                        <label class="text-danger">* Field Required</label>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i>&nbsp; Back</a>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp; Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/pages/scripts/role/form-validation.js"></script>
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-service-pack");
            FormValidation.init("#form");
            $('select').select2();

            $(".numeric").autoNumeric('init', { aSep: '.', aDec: ',', mDec: 0 });

            $("input#HourlyFormat").on("focusout", function () {
                $("input#Hourly").val($(this).autoNumeric('get'));
            });

            $("input#RateFormat").on("focusout", function () {
                $("input#Rate").val($(this).autoNumeric('get'));
            });

            $("input#Otp20Format").on("focusout", function () {
                $("input#Otp20").val($(this).autoNumeric('get'));
            });

            $("input#Otp30Format").on("focusout", function () {
                $("input#Otp30").val($(this).autoNumeric('get'));
            });

            $("input#Otp40Format").on("focusout", function () {
                $("input#Otp40").val($(this).autoNumeric('get'));
            });

            $("input#LaptopFormat").on("focusout", function () {
                $("input#Laptop").val($(this).autoNumeric('get'));
            });

            $("input#UsinFormat").on("focusout", function () {
                $("input#Usin").val($(this).autoNumeric('get'));
            });
            
        });
    </script>
}
