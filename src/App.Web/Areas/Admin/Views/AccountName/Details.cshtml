@model App.Web.Models.ViewModels.Core.Business.AccountNameViewModel
@{
    ViewBag.Title = "Account Name Page | Details";
    var owner = (UserProfile)ViewBag.Owner;
}

@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Account Name</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Details</span>
    </li>
}

<h1 class="page-title">Account Name<small> Details</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">Account Name Details</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <form role="form" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Name" class="control-label col-md-3">
                        <strong>Account Name</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Name
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label col-md-3">
                        <strong>Status</strong>
                    </label>
                    <div class="col-md-9">
                        
                            @if (Model.Status == true)
                            {
                                <p class="form-control-static">Active</p>
                            }
                            else
                            {

                                <p class="form-control-static">Close</p>
                            }
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Owner</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @owner.Name
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i>&nbsp; Back</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i>&nbsp; Edit</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-account-name");

            var success = @((TempData["Success"] != null).ToString().ToLower());

            if (success == true) {
                toastr.options = {
                    "closeButton": true,
                    "positionClass": "toast-top-right"
                }
                toastr.success("Account name has been updated");
            }
        });
    </script>
}