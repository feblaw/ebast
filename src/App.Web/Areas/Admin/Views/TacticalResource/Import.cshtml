@{
    ViewBag.Title = "Tactical Resource | Import";
}
@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Tactical Resource List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Import</span>
    </li>
}

<h1 class="page-title">Tactical Resource <small>Import</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">Tactical Resource Import Form</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
            <a href="/Admin/TacticalResource/Template" class="btn btn-success"><i class="fa fa-download"></i> Download Template</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <div class="row">

            <div class="col-lg-12">
                <form role="form" asp-action="Import" method="post" id="form" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-md-6 control-label">
                            <input type="file" style="margin-left:10px;" class="control-label" name="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required />
                        </div>
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-primary" value="Upload" />
                        </div>
                    </div>
                </form>
                <hr />
            </div>

            <div class="col-lg-12">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <p style="margin-left:10px;"><strong>Format Import ( Example ) :</strong></p>
                        <table class="table table-bordered" width="100">
                            <tr>
                                <td></td>
                                <td>A</td>
                                <td>B</td>
                                <td>C</td>
                                <td>D</td>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>Organization / Sub Organization</td>
                                <td>TRCP Approved</td>
                                <td>TRCP Forecast</td>
                                <td>Date SRF</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Raso Network Serice</td>
                                <td>1064</td>
                                <td>941</td>
                                <td>2017-01-01</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Nes Build</td>
                                <td>65</td>
                                <td>41</td>
                                <td>2017-01-02</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>Nes Bussines Operation</td>
                                <td>164</td>
                                <td>91</td>
                                <td>2017-01-03</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>Nes FSO</td>
                                <td>345</td>
                                <td>341</td>
                                <td>2017-01-04</td>
                            </tr>
                            
                            <tr>
                                <td colspan="3" align="left"><strong>Worksheet 1</strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/pages/scripts/role/form-validation.js"></script>
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-trcp");
            FormValidation.init("#form");
        });
    </script>
}