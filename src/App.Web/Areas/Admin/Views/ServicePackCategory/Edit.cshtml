@model App.Web.Models.ViewModels.Core.Business.ServicePackCategoryModelForm
@{
    ViewBag.Title = "Service Pack Category Page | Edit";
}

@section breadcrumb{
    <li>
        <a asp-area="Admin" asp-controller="ServicePack" asp-action="Index">SSOW List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="@Url.Action("Index")">Service Package Category List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Edit</span>
    </li>
}

<h1 class="page-title">Service Pack Category <small>Edit</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">Service Pack Category Form</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <form role="form" asp-action="Edit" method="post" id="RoleEdit" class="form-horizontal">
            <div class="form-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                </div>
                @Html.ValidationSummary(true, "Failed to submit", new { @class = "alert alert-danger" })
                <div class="form-group">
                    <label asp-for="Name" class="control-label col-md-3">
                        Category Name
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" asp-for="Name" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Level" class="control-label col-md-3">
                        Level
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="Level" required>
                            <option value="Staff">Staff Level</option>
                            <option value="Manager">Manager Level</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label col-md-3">
                        Category Status
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="Status" required>
                            <option value="Active">Active</option>
                            <option value="Close">Close</option>
                        </select>
                    </div>
                </div>
                <div class="form-group last">
                    <div class="col-md-3 col-md-offset-3">
                        <label class="text-danger">* Field Required</label>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i>&nbsp; Back</a>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp; Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/pages/scripts/role/form-validation.js"></script>
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-role-management");
            FormValidation.init("#RoleEdit");
        });
    </script>
}
