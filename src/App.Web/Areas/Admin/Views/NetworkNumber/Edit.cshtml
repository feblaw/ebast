@model App.Web.Models.ViewModels.Core.Business.NetworkNumberModelForm
@{
    ViewBag.Title = "Network Number Page | Edit";
}

@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Network Number List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Edit</span>
    </li>
}

<h1 class="page-title">Network Number <small>Edit</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">Network Number Code Form</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <form role="form" asp-action="Edit" method="post" id="RoleEdit" class="form-horizontal">
            <div class="form-body">
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                </div>
                @Html.ValidationSummary(true, "Failed to submit", new { @class = "alert alert-danger" })
                <div class="form-group">
                    <label asp-for="Code" class="control-label col-md-3">
                        Network Number
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" asp-for="Code" required>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label col-md-3">
                        Project
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        @*<select class="form-control" asp-for="ProjectId" required></select>*@
                        <select class="form-control" asp-for="ProjectId" asp-items="@(new SelectList(@ViewBag.Projects, "Id","Name"))" required></select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentId" class="control-label col-md-3">
                        Organizational Unit
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        @*<select class="form-control" asp-for="DepartmentId" required></select>*@
                        <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(@ViewBag.Departements, "Id","Name"))" required></select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LineManagerId" class="control-label col-md-3">
                        Total Project Manager
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        @*<select class="form-control" asp-for="LineManagerId"  required></select>*@
                        <select class="form-control" asp-for="LineManagerId" asp-items="@(new SelectList(@ViewBag.LineManagers, "Id","Name"))" required></select>

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">
                        Project Manager
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="ProjectManagerId" asp-items="@(new SelectList(@ViewBag.ProjectManagers, "Id","Name"))" required></select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AccountNameId" class="control-label col-md-3">
                        Account Name
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        @*<select class="form-control" asp-for="AccountNameId" required></select>*@
                        <select class="form-control" asp-for="AccountNameId" asp-items="@(new SelectList(@ViewBag.AccountNames, "Id","Name"))" required></select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="IsClosed" class="control-label col-md-3">
                        Status
                        <span class="text-danger"> * </span>
                    </label>
                    <div class="col-md-6">
                        <select class="form-control" asp-for="IsClosed" asp-items="@(new SelectList(@ViewBag.ListStatus, "Id","Name"))" required>
                            <option disabled selected>-- Select Status --</option>
                        </select>
                        <span asp-validation-for="IsClosed" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label col-md-3">
                        Description
                    </label>
                    <div class="col-md-6">
                        <textarea rows="3" class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group last">
                    <div class="col-md-3 col-md-offset-3">
                        <label class="text-danger">* Field Required</label>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i>&nbsp; Back</a>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp; Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/assets/pages/scripts/role/form-validation.js"></script>
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-network-number");
            FormValidation.init("#RoleEdit");
            $('select').select2();
        });
    </script>
}
