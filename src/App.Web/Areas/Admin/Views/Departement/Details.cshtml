@model App.Web.Models.ViewModels.Core.Business.DepartementViewModel
@{
    ViewBag.Title = "Organizational Unit Page | Details";
    var currentHead = (UserProfile)ViewBag.CurrentUser;
}

@section breadcrumb{
    <li>
        <a href="@Url.Action("Index")">Organizational Unit List</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Details</span>
    </li>
}

<h1 class="page-title">Organizational Unit <small>Details</small></h1>
<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-blue sbold uppercase">Organizational Unit Details</span>
        </div>
        <div class="pull-right">
            <a class="btn btn-default" href="@Url.Action("Index")"><i class="fa fa-arrow-circle-left"></i> Return to index</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        <form role="form" class="form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Name" class="control-label col-md-3">
                        <strong>Organizational Unit Name</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Name
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OperateOrNon" class="control-label col-md-3">
                        <strong>Operational / Non-Operational</strong>
                    </label>
                    <div class="col-md-9">
                        @if (Model.OperateOrNon == 1)
                        {
                            <p class="form-control-static">Operational</p>
                        }
                        else
                        {

                            <p class="form-control-static">Non-Operational</p>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        <strong>Head Of Organization</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @currentHead.Name
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label col-md-3">
                        <strong>Description</strong>
                    </label>
                    <div class="col-md-9">
                        <p class="form-control-static">
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i>&nbsp; Back</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i>&nbsp; Edit</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $common.setMenu("#menu-master-data", "#menu-departement");

            var success = @((TempData["Success"] != null).ToString().ToLower());

            if (success == true) {
                toastr.options = {
                    "closeButton": true,
                    "positionClass": "toast-top-right"
                }
                toastr.success("Organizational unit has been updated");
            }
        });
    </script>
}