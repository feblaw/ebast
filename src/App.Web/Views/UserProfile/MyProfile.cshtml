@using App.Web.Models.ViewModels.Identity
@model UserProfileViewModel
@{
    ViewData["Title"] = "MyProfile";
}

<div class="container p-t-20">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-green"><strong>Profile</strong></h3>
            <h4><strong style="color:grey">My Profile</strong></h4>
            <hr class="green">
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal col-md-8 col-md-offset-2">
            <div class="tabbable paper-shadow relative" data-z="0.5">
               <!-- Panes -->
                <div class="tab-content main">
                    <div id="account" class="tab-pane active p-20 main-colour-bg">
                        <form class="form-horizontal" asp-route-id="@Model.Id">
