@using System.Threading.Tasks
@using App.Web.Models.ViewModels.Identity.AccountViewModels
@model App.Web.Models.ViewModels.Identity.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

@*<h2>@ViewData["Title"]</h2>
    <p>
        For more information on how to enable reset password please see this <a href="http://go.microsoft.com/fwlink/?LinkID=532713">article</a>.
    </p>*@

<div class="row">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="login-form col-md-8 col-md-offset-2">
        <h4 class="form-title font-white margin-bottom-20">Forgot Password</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            @*<label asp-for="Email" class="col-md-5 control-label">Enter Your Email</label>*@

                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <input type="submit" class="btn btn-success btn-block" value="Send" />
        </div>
        <div class="form-actions">
            <a href="@Url.Action("Login","Account")" class="font-white">Already have account, Sign In Here</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


<style>
    .control-label {
        text-align: left !important;
    }
</style>