@using System.Collections.Generic
@using System.Threading.Tasks
@using App.Domain.Models.Identity
@using App.Web.Models.ViewModels.Identity.AccountViewModels
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@*@inject SignInManager<ApplicationUser> SignInManager*@

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/images/EricssonLogo3.png" alt="IMG" style="height: 175px; width: 175px; margin-left: 100px; margin-top: 65px;">
                </div>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login100-form validate-form">
                    <span class="login100-form-title">
						e-BAST
					</span>
                     @if (!ViewData.ModelState.IsValid)
                {
                <div class="alert alert-danger">
                    <button class="close" data-close="alert"></button>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                }
                @if (TempData.ContainsKey("Success"))
                {
                <div class="alert alert-success">
                    <i class="fa fa-exclamation-circle"></i><small> @TempData["Success"]</small>
                    <button type="button" class="close" data-dismiss="alert">
                        �
                    </button>
                </div>
                    TempData.Remove("message");
                    TempData.Remove("cls");
                }
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button>
                    <span> Enter any username and password. </span>
                </div>

                    <div class="wrap-input100 validate-input" data-validate="Valid username is required">
                        <input asp-for="Username" class="input100" type="text" placeholder="Email" style="border-radius: 25px;">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input asp-for="Password" class="input100" type="password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>
                    
                    <div class="form-actions">
                         <input type="submit" class="login100-form-btn" value="Sign In" />
                    </div>

                    <!-- <div class="text-center p-t-12">
                        <span class="txt1">
							Forgot
						</span>
                        <a class="txt2" href="#">
							Username / Password?
						</a>
                    </div> -->

                    
                    <div class="text-center p-t-136">
                    <a href="@Url.Action("ForgotPassword","Account")" id="forget-password" class="font-white" hidden>Forgot Password?
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>                    
                    </a>
                    </div>
                </form>
                <p class = "rights" style="text-align: center;">
                    © @DateTime.Now.Year All Rights Reserved.
                </p>
            </div>
        </div>
        
    </div>

@section styles{
    <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/css/main.css" >
    <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/css/util.css" >
    <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/vendor/bootstrap/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/fonts/font-awesome-4.7.0/css/font-awesome.min.css"> -->
    <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="../assets/global/plugins/login-new/vendor/select2/select2.min.css">
}

@section scripts{
    <script src="~/assets/pages/scripts/account/login.js"></script>
    <script src="../assets/global/plugins/login-new/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="../assets/global/plugins/login-new/vendor/bootstrap/js/popper.js"></script>
    <script src="../assets/global/plugins/login-new/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="../assets/global/plugins/login-new/vendor/select2/select2.min.js"></script>
    <script src="../assets/global/plugins/login-new/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
            $('.js-tilt').tilt({
                scale: 1.1
            })
    </script>
}



