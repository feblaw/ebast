@using System.Threading.Tasks
@using App.Web.Models.ViewModels.Identity.AccountViewModels
@model RegisterViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<div class="content">
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="register-form">
        <h3 class="form-title font-green">Sign Up</h3>
        <p class="hint">Enter your personal details below:</p>
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <p class="hint">Enter your account details below:</p>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-type Your Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-actions margin-bottom-25">
            <button type="submit" class="btn green btn-block uppercase">Register</button>
        </div>
        <div class="create-account">
            <p>
                <a asp-controller="Account" asp-action="Login">Already Have Account? Sign In Here</a>
            </p>
        </div>
    </form>
</div>

@section Styles{
    <style>
        .register-form{
            display: block !important;
        }
    </style>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
